    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [
        {
          "slug": "football",
          "description": "Footie!"
        }
      ]
    }
  },
  "GET /api/article/:article_id": {
    "description": "serves the requested article",
    "queries": [],
    "exampleResponse": {
      "article": {
        "article_id": 1,
        "author": "butter_bridge",
        "title": "Living in the shadow of a great man",
