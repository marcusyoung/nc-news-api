      }
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles in descending order of date",
    "queries": [],
    "exampleResponse": {
      "articles": [
        {
          "author": "icellusedkars",
          "title": "Eight pug gifs that remind me of mitch",
